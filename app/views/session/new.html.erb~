<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  
  <%= form_tag do %>
    <fieldset>
      <% if @no_users %>
        <legend>Create And Log In Admin</legend>
      <% else %>
        <legend>Please Log In</legend>
      <% end %>
      <div>
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      
      <div>
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      
      <% if @no_users %>
        <div>
          <%= label_tag :password_confirmation, 'Confirm:' %>
          <%= password_label_tag :password_confirmation, size: 40 %>
        </div>
      <% end %>
      <div>
        <%= submit_tag 'Login' %>
      </div>
    </fieldset>  
  <% end %>
</div>
